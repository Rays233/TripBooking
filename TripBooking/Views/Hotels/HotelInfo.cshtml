@{
}
@model HotelInfoViewModel

<h2>@Model.Hotel.Name</h2>
<p>@Model.Hotel.City, @Model.Hotel.Country</p>

<h3>Available Rooms</h3>
<p>For stay from @Model.CheckIn.ToShortDateString() to @Model.CheckOut.ToShortDateString()</p>

@if (Model.AvailableRooms.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Room Number</th>
                <th>Room Type</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model.AvailableRooms)
            {
                <tr>
                    <td>@room.Type</td>
                    <td>
                        <a asp-action="Book" asp-route-roomId="@room.RoomId" asp-route-checkIn="@Model.CheckIn" asp-route-checkOut="@Model.CheckOut" class="btn btn-primary">Book Now</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No rooms available for the selected dates.</p>
}
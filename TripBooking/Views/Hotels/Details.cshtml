@model TripBooking.Models.Hotel
        
<h2>@Model.Name</h2>
<p>@Model.Description</p>

<h3>Room Types</h3>
@foreach (var room in Model.Rooms)
{
    <div>
        <h4>@room.Name</h4>
        <p>@room.Description</p>
        <p>@room.Price per night</p>
        <form asp-action="Reserve" asp-controller="Booking" method="post">
            <input type="hidden" name="RoomId" value="@room.RoomId" />
            <input type="hidden" name="CheckIn" value="@ViewBag.CheckIn" />
            <input type="hidden" name="CheckOut" value="@ViewBag.CheckOut" />
            <label for="customerName">Name:</label>
            <input type="text" id="customerName" name="CustomerName" required />
            <label for="customerEmail">Email:</label>
            <input type="email" id="customerEmail" name="CustomerEmail" required />
            <button type="submit">Reserve</button>
        </form>
    </div>
}